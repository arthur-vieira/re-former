<!-- using form_for helper -->

<%= form_for @user do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :username %>
  <%= f.text_field :username, placeholder: 'Create your unique username' %>

  <%= f.label :email %>
  <%= f.text_field :email, placeholder: 'insertYour@Email.com' %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>
